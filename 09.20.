#include <iostream>

using namespace std;





void piramis (int meret){

    for(int i=4; i>0; i--){
    for(int j=i; j>0; j--){
        cout<<j;
    }
    std::cout << endl;
}
}
int hatvany (int szam, int kitevo){

    int eredmeny=1;

    for(int i=0; i<kitevo; i++){
        eredmeny=eredmeny*szam;
    }

    return eredmeny;

}



int F(int n)
{

    if (n > 2)
        return F(n-1) + F(n-2);
    else
        return 1;
}
void fibonacciKiir(int meret)
{
    for(int i=1; i<meret+1; i++){
        cout<<F(i);
    }

}

 int main()
{
    int x = 5;
    fibonacciKiir(5);
    std::cout << hatvany(3,12) << std::endl;

piramis(4);

    return 0;
}
