#include <iostream>
using namespace std;


void forditottpiramis (int meret){
    
    for(int i=1; i<(meret+1); i++){
    for(int j=i; j<(meret+1); j++){
        cout<<j;
    }
    cout<<endl;
   
    }
}





void piramis (int meret){
    
    for(int i=meret; i>0; i--){
    for(int j=i; j>0; j--){
        cout<<j;
    }
    cout<<endl;
   
    }
}





int hatvany (int szam, int kitevo){
    
    int eredmeny=1;
    
    for(int i=0; i<kitevo; i++){
        eredmeny=eredmeny*szam;
    }
    
    return eredmeny;
    
}

int main()
{
    
    std::cout << hatvany(3,12) << std::endl;
    piramis(6);
    forditottpiramis(6);
    
    
    return 0;
}
